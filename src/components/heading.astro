---
import { type Stylable } from "../types";
import { twm } from "../utils";

type Variant = "h1" | "h2" | "h3";

interface Props extends Stylable {
  variant: Variant;
}

const { classNames, variant } = Astro.props;

const styles: Record<Variant, string> = {
  h1: "text-4xl font-bold tracking-tight",
  h2: "text-2xl font-semibold tracking-tight",
  h3: "text-xl font-medium tracking-tight",
};
---

<h1 class={twm(`${styles[variant]} text-ctp-lavender`, classNames)}>
  <slot />
</h1>
